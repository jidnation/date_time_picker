<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinnerBox"
        android:layout_width="wrap_content"
        android:layout_height="60sp" />

    <Button
        android:id="@+id/timeShowButton"
        android:layout_width="wrap_content"
        android:layout_height="56sp"
        android:onClick="openPicker"
        android:text="Open Time Picker"
        app:cornerRadius="5sp" />

    <Button
        android:id="@+id/dateDialogOpener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:onClick="openDateDialog"
        android:text="Open Date Picker"
        app:cornerRadius="5sp" />

    <Button
        android:id="@+id/alertDialogHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openAlertDialog"
        android:text="Show Alert Dialog"
        app:cornerRadius="5sp" />

</LinearLayout>